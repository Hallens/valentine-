        }

        h1 {
            color: #ff4d6d;
            margin: 20px 0;
        }

        .btn {
            position: relative;
            height: 120px;
            margin-top: 20px;
        }

        button {
            border: none;
            padding: 12px 25px;
            border-radius: 30px;
            font-weight: bold;
            color: white;
            cursor: pointer;
            font-size: 16px;
            position: absolute;
            transition: transform 0.3s ease;
        }

        #yes {
            background: #ff4d6d;
            left: 20px;
            top: 40px;
        }

        #no {
            background: #adb5bd;
            right: 20px;
            top: 40px;
        }

        /* Yes animation */
        .love {
            animation: pop 0.6s ease forwards;
        }

        @keyframes pop {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.4);
            }

            100% {
                transform: scale(1.2);
            }
        }

        .message {
